<Window x:Class="GroupeV.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier le profil"
        Width="480" Height="580"
        MinWidth="420" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource NeuBackgroundBrush}">

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="ðŸ‘¤  Modifier le profil" FontFamily="{StaticResource NeuFontFamily}"
                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource NeuTextPrimaryBrush}"/>
            <TextBlock Text="Modifiez vos informations personnelles" FontFamily="{StaticResource NeuFontFamily}"
                       FontSize="12" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Status message -->
                <Border x:Name="StatusBorder" Style="{StaticResource NeuCardInset}" Padding="12"
                        Margin="0,0,0,16" Visibility="Collapsed">
                    <TextBlock x:Name="StatusText" FontFamily="{StaticResource NeuFontFamily}"
                               FontSize="12" TextWrapping="Wrap" TextAlignment="Center" FontWeight="SemiBold"/>
                </Border>

                <TextBlock Text="PrÃ©nom" FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           FontWeight="SemiBold" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,6"/>
                <TextBox x:Name="PrenomBox" Style="{StaticResource NeuTextBox}" Margin="0,0,0,16" MaxLength="255"/>

                <TextBlock Text="Nom" FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           FontWeight="SemiBold" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,6"/>
                <TextBox x:Name="NomBox" Style="{StaticResource NeuTextBox}" Margin="0,0,0,16" MaxLength="255"/>

                <TextBlock Text="Adresse email" FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           FontWeight="SemiBold" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,6"/>
                <TextBox x:Name="EmailBox" Style="{StaticResource NeuTextBox}" Margin="0,0,0,16" MaxLength="255"/>

                <TextBlock Text="TÃ©lÃ©phone" FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           FontWeight="SemiBold" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,6"/>
                <TextBox x:Name="PhoneBox" Style="{StaticResource NeuTextBox}" Margin="0,0,0,16" MaxLength="20"/>

                <TextBlock Text="Adresse" FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           FontWeight="SemiBold" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,6"/>
                <TextBox x:Name="AdresseBox" Style="{StaticResource NeuTextBox}" Margin="0,0,0,16"
                         MaxLength="255" AcceptsReturn="False"/>

                <TextBlock Text="Nom d'entreprise" FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           FontWeight="SemiBold" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,6"/>
                <TextBox x:Name="NomEntrepriseBox" Style="{StaticResource NeuTextBox}" Margin="0,0,0,4" MaxLength="100"/>
                <TextBlock Text="Optionnel â€” affichÃ© dans le catalogue" FontFamily="{StaticResource NeuFontFamily}"
                           FontSize="11" Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="4,0,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Annuler" Style="{StaticResource NeuButton}"
                    Height="42" FontSize="13" Click="Cancel_Click"/>
            <Button Grid.Column="2" x:Name="SaveButton" Content="ðŸ’¾  Enregistrer"
                    Style="{StaticResource NeuButtonAccent}"
                    Height="42" FontSize="13" Click="Save_Click"/>
        </Grid>
    </Grid>
</Window>
