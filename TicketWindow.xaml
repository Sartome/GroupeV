<Window x:Class="GroupeV.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Support â€” Mes tickets"
        Width="920" Height="660"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource NeuBackgroundBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="ðŸŽ«  Support &amp; Tickets" FontFamily="{StaticResource NeuFontFamily}"
                           FontSize="20" FontWeight="Bold" Foreground="{StaticResource NeuTextPrimaryBrush}"/>
                <TextBlock Text="CrÃ©ez un ticket ou suivez vos demandes d'assistance"
                           FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="0,3,0,0"/>
            </StackPanel>
            <Button Content="âœ•  Fermer" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Style="{StaticResource NeuButton}" Padding="14,8" FontSize="12"
                    Click="Close_Click"/>
        </Grid>

        <!-- Main layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="220"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Ticket list -->
            <Border Grid.Column="0" Style="{StaticResource NeuCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- New ticket button -->
                    <Border Grid.Row="0" Padding="12,12,12,8"
                            BorderThickness="0,0,0,1" BorderBrush="{StaticResource NeuDividerBrush}">
                        <Button Content="âž•  Nouveau ticket" Style="{StaticResource NeuButtonAccent}"
                                Height="38" FontSize="12" Click="NewTicket_Click"/>
                    </Border>

                    <!-- Ticket list -->
                    <ListBox Grid.Row="1" x:Name="TicketListBox" Background="Transparent"
                             BorderThickness="0" Padding="8"
                             SelectionChanged="TicketListBox_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,3"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="ItemBd" CornerRadius="10" Padding="12,10"
                                                    Background="Transparent">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBd" Property="Background"
                                                            Value="{StaticResource NeuInputBgBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBd" Property="Background"
                                                            Value="{StaticResource NeuAccentBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Titre}" FontFamily="{StaticResource NeuFontFamily}"
                                               FontSize="13" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"
                                               Foreground="{StaticResource NeuTextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding StatutEmoji}" FontFamily="{StaticResource NeuFontFamily}"
                                                   FontSize="11" Foreground="{StaticResource NeuTextSecondaryBrush}"/>
                                        <TextBlock Text=" Â· " FontSize="11"
                                                   Foreground="{StaticResource NeuTextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding DateFormate}" FontFamily="{StaticResource NeuMonoFont}"
                                                   FontSize="10" Foreground="{StaticResource NeuTextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- RIGHT: Conversation -->
            <Border Grid.Column="2" Style="{StaticResource NeuCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ticket header -->
                    <Border Grid.Row="0" Padding="18,14"
                            BorderThickness="0,0,0,1" BorderBrush="{StaticResource NeuDividerBrush}">
                        <Grid>
                            <StackPanel>
                                <TextBlock x:Name="TicketTitleText" Text="SÃ©lectionnez un ticket"
                                           FontFamily="{StaticResource NeuFontFamily}" FontSize="15" FontWeight="Bold"
                                           Foreground="{StaticResource NeuTextPrimaryBrush}"/>
                                <TextBlock x:Name="TicketStatusText" Text=""
                                           FontFamily="{StaticResource NeuFontFamily}" FontSize="11"
                                           Foreground="{StaticResource NeuTextSecondaryBrush}" Margin="0,3,0,0"/>
                            </StackPanel>
                            <Button x:Name="CloseTicketBtn" Content="ðŸ”’  Fermer le ticket"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                                    Style="{StaticResource NeuButtonDanger}" Padding="12,6" FontSize="11"
                                    Visibility="Collapsed" Click="CloseTicket_Click"/>
                        </Grid>
                    </Border>

                    <!-- Messages -->
                    <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer"
                                  VerticalScrollBarVisibility="Auto" Padding="16,12">
                        <StackPanel x:Name="MessagesPanel"/>
                    </ScrollViewer>

                    <!-- Empty state -->
                    <TextBlock Grid.Row="1" x:Name="EmptyStateText"
                               Text="Aucun ticket sÃ©lectionnÃ©.&#x0a;SÃ©lectionnez un ticket Ã  gauche ou crÃ©ez-en un nouveau."
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontFamily="{StaticResource NeuFontFamily}" FontSize="13"
                               Foreground="{StaticResource NeuTextSecondaryBrush}"
                               TextAlignment="Center" TextWrapping="Wrap" Margin="40"/>

                    <!-- Reply area -->
                    <Border Grid.Row="2" x:Name="ReplyArea" Padding="14,12"
                            BorderThickness="0,1,0,0" BorderBrush="{StaticResource NeuDividerBrush}"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="ReplyBox" Style="{StaticResource NeuTextBox}"
                                     Height="44" FontSize="13"
                                     KeyDown="ReplyBox_KeyDown"/>
                            <Button Grid.Column="2" Content="Envoyer â–¶" Style="{StaticResource NeuButtonAccent}"
                                    Height="44" Padding="18,0" FontSize="13" Click="SendReply_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
