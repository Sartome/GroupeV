<Window x:Class="GroupeV.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GroupeV - Demarrage" 
        Height="600" Width="800"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:3"/>
        </Storyboard>

        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.3" To="1" Duration="0:0:1"/>
        </Storyboard>

        <Storyboard x:Key="BounceAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="0" To="-20" Duration="0:0:0.5" AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="ZoomAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.2" Duration="0:0:0.8"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.2" Duration="0:0:0.8"/>
        </Storyboard>

        <Storyboard x:Key="GlitchAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="-5" To="5" Duration="0:0:0.1" AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Border BorderBrush="LimeGreen" BorderThickness="5">
        <Border.Effect>
            <DropShadowEffect Color="LimeGreen" BlurRadius="30" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#000000" Offset="0"/>
                    <GradientStop Color="#001a00" Offset="0.5"/>
                    <GradientStop Color="#000000" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas x:Name="ParticlesCanvas"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <Viewbox Width="150" Height="150" Margin="0,0,0,30">
                    <Grid>
                        <Ellipse Width="150" Height="150" 
                                Stroke="LimeGreen" StrokeThickness="5"
                                Fill="Transparent"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource RotateAnimation}"/>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        
                        <Path Data="M 75,30 L 75,120 M 50,55 L 100,55 M 50,95 L 100,95" 
                              Stroke="Yellow" StrokeThickness="8"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform/>
                            </Path.RenderTransform>
                            <Path.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                           From="360" To="0" Duration="0:0:4"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Path.Triggers>
                        </Path>

                        <TextBlock FontSize="80" FontWeight="Bold"
                                  Foreground="LimeGreen"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5" Text="$">
                            <TextBlock.RenderTransform>
                                <ScaleTransform/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource ZoomAnimation}"/>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Grid>
                </Viewbox>

                <TextBlock Text="** GROUPE V **" 
                          FontFamily="Consolas"
                          FontSize="60" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          RenderTransformOrigin="0.5,0.5">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="LimeGreen"/>
                    </TextBlock.Foreground>
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                  From="LimeGreen" To="#00FF00" Duration="0:0:0.5" AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                    <TextBlock.Effect>
                        <DropShadowEffect Color="LimeGreen" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="SYSTEME DE VENTE INTELLIGENT" 
                          FontFamily="Consolas"
                          FontSize="18" 
                          Foreground="#00CC00" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"
                          RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource BounceAnimation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <Border Background="#0A0A0A" 
                       BorderBrush="LimeGreen" 
                       BorderThickness="2" 
                       Width="400" 
                       Height="40"
                       CornerRadius="20"
                       Margin="0,0,0,20">
                    <Grid>
                        <Rectangle x:Name="LoadingBar"
                                  Fill="LimeGreen"
                                  HorizontalAlignment="Left"
                                  Width="0"
                                  RadiusX="18"
                                  RadiusY="18">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="LimeGreen" BlurRadius="15" ShadowDepth="0"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        
                        <TextBlock x:Name="LoadingText"
                                  Text=">> INITIALISATION..."
                                  FontFamily="Consolas"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <TextBlock x:Name="StatusText"
                          Text="Chargement des modules..."
                          FontFamily="Consolas"
                          FontSize="12"
                          Foreground="#00AA00"
                          HorizontalAlignment="Center"
                          RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource GlitchAnimation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="[OK] Connexion a la base de donnees" 
                              FontFamily="Consolas" FontSize="11" Foreground="LimeGreen"
                              HorizontalAlignment="Center" Opacity="0" x:Name="Msg1"/>
                    <TextBlock Text="[OK] Chargement des produits" 
                              FontFamily="Consolas" FontSize="11" Foreground="LimeGreen"
                              HorizontalAlignment="Center" Opacity="0" x:Name="Msg2" Margin="0,5,0,0"/>
                    <TextBlock Text="[OK] Initialisation de l'interface" 
                              FontFamily="Consolas" FontSize="11" Foreground="LimeGreen"
                              HorizontalAlignment="Center" Opacity="0" x:Name="Msg3" Margin="0,5,0,0"/>
                    <TextBlock Text="[OK] Configuration du systeme" 
                              FontFamily="Consolas" FontSize="11" Foreground="LimeGreen"
                              HorizontalAlignment="Center" Opacity="0" x:Name="Msg4" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>

            <Canvas>
                <TextBlock Text="+ + +" FontFamily="Consolas" FontSize="20" 
                          Foreground="LimeGreen" Canvas.Left="10" Canvas.Top="10">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                
                <TextBlock Text="+ + +" FontFamily="Consolas" FontSize="20" 
                          Foreground="LimeGreen" Canvas.Right="10" Canvas.Top="10">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                
                <TextBlock Text="+ + +" FontFamily="Consolas" FontSize="20" 
                          Foreground="LimeGreen" Canvas.Left="10" Canvas.Bottom="10">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                
                <TextBlock Text="+ + +" FontFamily="Consolas" FontSize="20" 
                          Foreground="LimeGreen" Canvas.Right="10" Canvas.Bottom="10">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </Canvas>

            <TextBlock Text="v2.0.0 | (c) 2024 GroupeV" 
                      FontFamily="Consolas" FontSize="10" 
                      Foreground="#00AA00"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Margin="0,0,0,20"/>
        </Grid>
    </Border>
</Window>
