<Window x:Class="GroupeV.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GroupeV — Démarrage" 
        MinHeight="400" MinWidth="520"
        Height="480" Width="640"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Border CornerRadius="24" Background="{StaticResource NeuBackgroundBrush}">
        <Border.Effect>
            <DropShadowEffect Color="{StaticResource NeuDarkShadow}" BlurRadius="30" ShadowDepth="8" Direction="315" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Neumorphic Logo -->
                <Border Style="{StaticResource NeuStatCard}" CornerRadius="28" Width="100" Height="100"
                        HorizontalAlignment="Center" Margin="0,0,0,28">
                    <TextBlock Text="€" FontSize="50" FontWeight="Bold" 
                               Foreground="{StaticResource NeuAccentBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="GROUPE V" 
                           FontFamily="{StaticResource NeuFontFamily}"
                           FontSize="38" FontWeight="Bold"
                           Foreground="{StaticResource NeuTextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>

                <TextBlock Text="Système de vente intelligent" 
                           FontFamily="{StaticResource NeuFontFamily}"
                           FontSize="15" 
                           Foreground="{StaticResource NeuTextSecondaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,36"/>

                <!-- Progress bar neumorphic -->
                <Border Style="{StaticResource NeuCardInset}" Width="360" Height="36" CornerRadius="18"
                        Padding="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Grid>
                        <Rectangle x:Name="LoadingBar" 
                                   HorizontalAlignment="Left" Width="0"
                                   RadiusX="16" RadiusY="16">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="{StaticResource NeuAccentLight}" Offset="0"/>
                                    <GradientStop Color="{StaticResource NeuAccent}" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock x:Name="LoadingText" Text="Initialisation..."
                                   FontFamily="{StaticResource NeuFontFamily}" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource NeuTextPrimaryBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <TextBlock x:Name="StatusText" Text="Chargement des modules..."
                           FontFamily="{StaticResource NeuFontFamily}" FontSize="12"
                           Foreground="{StaticResource NeuTextSecondaryBrush}"
                           HorizontalAlignment="Center"/>

                <StackPanel Margin="0,24,0,0" HorizontalAlignment="Center">
                    <TextBlock FontFamily="{StaticResource NeuFontFamily}" FontSize="11" 
                               Foreground="{StaticResource NeuSuccessBrush}"
                               HorizontalAlignment="Center" Opacity="0" x:Name="Msg1" Text="✓ Connexion à la base de données"/>
                    <TextBlock FontFamily="{StaticResource NeuFontFamily}" FontSize="11" 
                               Foreground="{StaticResource NeuSuccessBrush}"
                               HorizontalAlignment="Center" Opacity="0" x:Name="Msg2" Text="✓ Chargement des produits" Margin="0,4,0,0"/>
                    <TextBlock FontFamily="{StaticResource NeuFontFamily}" FontSize="11" 
                               Foreground="{StaticResource NeuSuccessBrush}"
                               HorizontalAlignment="Center" Opacity="0" x:Name="Msg3" Text="✓ Initialisation de l'interface" Margin="0,4,0,0"/>
                    <TextBlock FontFamily="{StaticResource NeuFontFamily}" FontSize="11" 
                               Foreground="{StaticResource NeuSuccessBrush}"
                               HorizontalAlignment="Center" Opacity="0" x:Name="Msg4" Text="✓ Configuration du système" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="v2.0.0 | © 2024 GroupeV" 
                       FontFamily="{StaticResource NeuFontFamily}" FontSize="10" 
                       Foreground="{StaticResource NeuTextSecondaryBrush}"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
        </Grid>
    </Border>
</Window>
