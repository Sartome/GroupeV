<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══ SCROLLBAR NEUMORPHIQUE ═══ -->
    
    <!-- ScrollBar Thumb (poignée) -->
    <Style x:Key="NeuScrollBarThumb" TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="{StaticResource NeuAccentBrush}" 
                            CornerRadius="8" 
                            Opacity="0.6">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource NeuDarkShadow}" 
                                              BlurRadius="4" ShadowDepth="2" Direction="315" Opacity="0.3"/>
                        </Border.Effect>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ScrollBar principale -->
    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="MinWidth" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Border Background="{StaticResource NeuDarkShadowBrush}" 
                                CornerRadius="6" 
                                Opacity="0.1" 
                                Margin="2"/>
                        <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="2">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource NeuScrollBarThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter Property="Height" Value="12"/>
                            <Setter Property="MinHeight" Value="12"/>
                            <Setter Property="Width" Value="Auto"/>
                            <Setter TargetName="PART_Track" Property="IsDirectionReversed" Value="False"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Height" Value="12"/>
                <Setter Property="MinHeight" Value="12"/>
                <Setter Property="Width" Value="Auto"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
