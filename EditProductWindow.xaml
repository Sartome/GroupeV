<Window x:Class="GroupeV.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PRODUCT EDITOR" 
        Height="650" Width="600"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LimeGreen"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00FF00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A0A0A"/>
            <Setter Property="Foreground" Value="#FF4444"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A0A0A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A0A0A"/>
            <Setter Property="Foreground" Value="LimeGreen"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="LimeGreen"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0A"/>
            <Setter Property="Foreground" Value="LimeGreen"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#00CC00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="LimeGreen"/>
        </Style>

        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#0A0A0A"/>
            <Setter Property="Foreground" Value="LimeGreen"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#00CC00"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="LimeGreen" BorderThickness="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#0A0A0A" Padding="20,15">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="HeaderTextBlock"
                               Text="[EDIT PRODUCT]" 
                               FontFamily="Consolas"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="LimeGreen" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="PRODUCT MANAGEMENT SYSTEM" 
                               FontFamily="Consolas"
                               FontSize="11" 
                               Foreground="#00CC00" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <ScrollViewer Grid.Row="1" Background="#0F0F0F" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,30">
                    <!-- Status Message -->
                    <Border Background="#0A0A0A" 
                            BorderBrush="#00CC00" 
                            BorderThickness="1" 
                            Padding="10" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed"
                            x:Name="StatusBorder">
                        <TextBlock x:Name="StatusTextBlock"
                                   Text=""
                                   FontFamily="Consolas" 
                                   FontSize="11" 
                                   Foreground="#00CC00"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </Border>

                    <!-- Product ID (Read-only for edit mode) -->
                    <Border Background="#1A1A1A" 
                            BorderBrush="#00CC00" 
                            BorderThickness="1" 
                            Padding="10" 
                            Margin="0,0,0,15"
                            x:Name="ProductIdBorder"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="[PRODUCT ID] " 
                                       FontFamily="Consolas" 
                                       FontSize="11" 
                                       Foreground="#00CC00"/>
                            <TextBlock x:Name="ProductIdTextBlock"
                                       Text="0" 
                                       FontFamily="Consolas" 
                                       FontSize="11" 
                                       Foreground="LimeGreen"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <TextBlock Text="Product Description *" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               Foreground="#00CC00" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionTextBox" 
                             Style="{StaticResource InputTextBoxStyle}" 
                             Margin="0,0,0,15"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>

                    <!-- Price -->
                    <TextBlock Text="Price (DH) *" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               Foreground="#00CC00" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="PriceTextBox" 
                             Style="{StaticResource InputTextBoxStyle}" 
                             Margin="0,0,0,15"/>

                    <!-- Category -->
                    <TextBlock Text="Category *" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               Foreground="#00CC00" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="CategoryComboBox" 
                              Style="{StaticResource InputComboBoxStyle}"
                              DisplayMemberPath="Libelle"
                              SelectedValuePath="IdCategorie"
                              Margin="0,0,0,15"/>

                    <!-- Image URL -->
                    <TextBlock Text="Image URL (optional)" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               Foreground="#00CC00" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ImageUrlTextBox" 
                             Style="{StaticResource InputTextBoxStyle}" 
                             Margin="0,0,0,15"/>

                    <!-- Image Alt Text -->
                    <TextBlock Text="Image Alt Text (optional)" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               Foreground="#00CC00" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ImageAltTextBox" 
                             Style="{StaticResource InputTextBoxStyle}" 
                             Margin="0,0,0,20"/>

                    <!-- Action Buttons -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="? CANCEL" 
                                Style="{StaticResource CancelButtonStyle}"
                                Click="CancelButton_Click"
                                Height="40"
                                Margin="0,0,5,0"/>

                        <Button Grid.Column="1" 
                                x:Name="SaveButton"
                                Content="? SAVE" 
                                Style="{StaticResource SaveButtonStyle}"
                                Click="SaveButton_Click"
                                Height="40"
                                Margin="5,0,0,0"/>
                    </Grid>

                    <!-- Delete Button (only in edit mode) -->
                    <Button x:Name="DeleteButton" 
                            Content="?? DELETE PRODUCT" 
                            Style="{StaticResource DeleteButtonStyle}"
                            Click="DeleteButton_Click"
                            Height="35"
                            Margin="0,15,0,0"
                            Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#0A0A0A" Padding="15,10">
                <TextBlock x:Name="FooterTextBlock"
                           Text="[STATUS] Ready" 
                           FontFamily="Consolas" 
                           FontSize="10" 
                           Foreground="#00AA00"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
