<Window x:Class="GroupeV.StocksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stocks" Height="350" Width="500">
    <Grid Margin="10">
        <TextBlock Text="Stocks controller" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <DataGrid Margin="0,50,0,0" x:Name="StocksDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>