<Window x:Class="GroupeV.DatabaseHealthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Database Health Check" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="[DATABASE HEALTH CHECK]" 
                       FontFamily="Consolas" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#00ff00"/>
            <TextBlock Text="System diagnostics and connection validation" 
                       FontFamily="Consolas" 
                       FontSize="12" 
                       Foreground="#888888" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Status Display -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="#0a0a0a"
                      Padding="15">
            <StackPanel x:Name="StatusPanel">
                <TextBlock x:Name="StatusText" 
                           FontFamily="Consolas" 
                           FontSize="13" 
                           Foreground="#00ff00" 
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="RUN CHECK" 
                    Width="130" 
                    Height="40"
                    Click="RunCheck_Click"
                    Margin="0,0,10,0"
                    Background="#00ff00"
                    Foreground="#000000"
                    FontFamily="Consolas"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="CLOSE" 
                    Width="130" 
                    Height="40"
                    Click="Close_Click"
                    Background="#333333"
                    Foreground="#ffffff"
                    FontFamily="Consolas"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
