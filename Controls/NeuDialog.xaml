<Window x:Class="GroupeV.Controls.NeuDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GroupeV" 
        SizeToContent="WidthAndHeight"
        MinWidth="380" MaxWidth="520"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border CornerRadius="22" Background="{StaticResource NeuBackgroundBrush}" Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="{StaticResource NeuDarkShadow}" BlurRadius="36" ShadowDepth="10" Direction="315" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel Margin="32,28,32,24">
            <!-- Icon -->
            <Border x:Name="IconBorder" Width="56" Height="56" CornerRadius="28"
                    HorizontalAlignment="Center" Margin="0,0,0,18">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource NeuDarkShadow}" BlurRadius="12" ShadowDepth="4" Direction="315" Opacity="0.35"/>
                </Border.Effect>
                <TextBlock x:Name="IconText" Text="â„¹" FontSize="28" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock" Text="Titre"
                       FontFamily="{StaticResource NeuFontFamily}" FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource NeuTextPrimaryBrush}"
                       HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10"/>

            <!-- Message -->
            <TextBlock x:Name="MessageTextBlock" Text="Message"
                       FontFamily="{StaticResource NeuFontFamily}" FontSize="13"
                       Foreground="{StaticResource NeuTextSecondaryBrush}"
                       TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,24"
                       MaxWidth="420" LineHeight="20"/>

            <!-- Buttons -->
            <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrimaryButton" Content="OK" Style="{StaticResource NeuButtonAccent}"
                        Click="PrimaryButton_Click" MinWidth="110" Height="42" Margin="4,0"/>
                <Button x:Name="SecondaryButton" Content="Annuler" Style="{StaticResource NeuButton}"
                        Click="SecondaryButton_Click" MinWidth="110" Height="42" Margin="4,0"
                        Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
