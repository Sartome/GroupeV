<Window x:Class="GroupeV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupeV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Login / Navigation -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Please sign in" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBlock Text="Username" />
            <TextBox x:Name="UsernameTextBox" Margin="0,4,0,8" />
            <TextBlock Text="Password" />
            <PasswordBox x:Name="PasswordBox" Margin="0,4,0,8" />
            <Button x:Name="SignInButton" Content="Sign in" Click="SignInButton_Click" />

            <Separator Margin="0,12,0,12" />

            <TextBlock Text="Navigation" FontWeight="Bold" Margin="0,0,0,6" />
            <Button x:Name="ShopButton" Content="Shop" Margin="0,4,0,0" Click="ShopButton_Click" IsEnabled="False" />
            <Button x:Name="StocksButton" Content="Stocks" Margin="0,4,0,0" Click="StocksButton_Click" IsEnabled="False" />
        </StackPanel>

        <!-- Right: Content area -->
        <Border Grid.Column="1" Margin="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" Text="Not signed in" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Foreground="Gray" />
            </Grid>
        </Border>
    </Grid>
</Window>
